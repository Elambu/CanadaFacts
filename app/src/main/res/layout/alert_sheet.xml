<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/space_large"
    android:paddingTop="@dimen/space_large"
    tools:ignore="MissingPrefix">

    <TextView
        android:id="@+id/tvAlertText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_medium"
        android:gravity="center"
        android:paddingEnd="@dimen/space_medium"
        android:paddingLeft="@dimen/space_medium"
        android:paddingRight="@dimen/space_medium"
        android:paddingStart="@dimen/space_medium"
        android:text="@string/no_connection"
        android:textColor="@color/black"
        android:textSize="@dimen/font_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvAlertText"
        android:layout_marginBottom="@dimen/space_medium"
        android:layout_marginTop="@dimen/space_large"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llNegative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/grey_corner_round_bg">

            <TextView
                android:id="@+id/tvAlertNegative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="@font/assistantsemibold"
                android:gravity="center"
                android:minWidth="100dp"
                android:paddingBottom="@dimen/space_small"
                android:paddingEnd="@dimen/space_medium"
                android:paddingLeft="@dimen/space_medium"
                android:paddingRight="@dimen/space_medium"
                android:paddingStart="@dimen/space_medium"
                android:paddingTop="@dimen/space_small"
                android:text="@string/alert_ok"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:background="@drawable/blue_corner_round_bg">

            <TextView
                android:id="@+id/tvAlertPositive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:fontFamily="@font/assistantsemibold"
                android:gravity="center"
                android:minWidth="100dp"
                android:paddingBottom="@dimen/space_small"
                android:paddingEnd="@dimen/space_medium"
                android:paddingLeft="@dimen/space_medium"
                android:paddingRight="@dimen/space_medium"
                android:paddingStart="@dimen/space_medium"
                android:paddingTop="@dimen/space_small"
                android:text="@string/retry"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>