<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/bg_color"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_small">

            <TextView
                android:id="@+id/row_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_normal"
                android:layout_marginTop="@dimen/space_normal"
                android:background="@color/bg_shimmer_view"
                android:textSize="@dimen/font_20"
                />

                <TextView
                    android:id="@+id/row_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_normal"
                    android:layout_marginTop="@dimen/space_normal"
                    android:layout_marginRight="@dimen/space_normal"
                    android:layout_marginEnd="@dimen/space_normal"
                    android:layout_below="@+id/row_title"
                    android:background="@color/bg_shimmer_view"
                    android:layout_toLeftOf="@+id/row_image"
                    android:paddingTop="@dimen/space_small"/>

            <TextView
                    android:id="@+id/row_description_next"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_normal"
                    android:layout_marginTop="@dimen/space_normal"
                    android:layout_marginRight="@dimen/space_normal"
                    android:layout_marginEnd="@dimen/space_normal"
                    android:layout_below="@+id/row_description"
                    android:background="@color/bg_shimmer_view"
                    android:layout_toLeftOf="@+id/row_image"
                    android:paddingTop="@dimen/space_small"/>

                <ImageView
                    android:id="@+id/row_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/space_normal"
                    android:background="@color/bg_shimmer_view"
                    android:layout_below="@+id/row_title"
                    android:padding="8dp"
                    android:src="@drawable/no_image"
                    android:layout_alignParentRight="true"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>




    </android.support.v7.widget.CardView>
